let nota1 = parseFloat(prompt("Digite a nota 1:"));
let nota2 = parseFloat(prompt("Digite a nota 2:"));
let nota3 = parseFloat(prompt("Digite a nota 3:"));

let maiorNota = nota1;

if (nota2 > maiorNota) {
    maiorNota = nota2;
}
if (nota3 > maiorNota) {
    maiorNota = nota3;
}

let somaNotas = 0;

if (maiorNota === nota1) {
    somaNotas = nota1 * 4 + nota2 * 3 + nota3 * 3;
}

if (maiorNota === nota2) {
    somaNotas = nota2 * 4 + nota1 * 3 + nota3 * 3;
}

if (maiorNota === nota3) {
    somaNotas = nota3 * 4 + nota1 * 3 + nota2 * 3;
}

let somaPesos = 4 + 3 + 3;
let media = somaNotas / somaPesos;

console.log("Notas:", nota1, nota2, nota3);
console.log("MÃ©dia:", media.toFixed(2));

if (media >= 5) {
    console.log("APROVADO");
}

if (media < 5) {
    console.log("REPROVADO");
}
